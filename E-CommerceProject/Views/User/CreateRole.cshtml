@model E_CommerceProject.Entities.ViewModels.RoleViewModel

@{
    ViewData["Title"] = "CreateRole";
    Layout = "_AdminLayout";
}

<h1>Create Role</h1>
<hr />

<div class="row">
    <div class="col-md-4 mt-3 mx-auto">
        <form asp-action="CreateRole">
            <div asp-validation-summary="ModelOnly" class="text-warning"></div>
            <div class="form-group" hidden>
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" style="width: fit-content" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <button type="submit" value="Create" class="btn btn-primary"><i class="bi bi-check"></i>Save</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-x"></i>Cancel</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
