@model CartViewModel

@if (Model.CartItems.Count > 0)
{
    <a class="btn text-light me-2" asp-controller="Cart" asp-action="Index" style="background-color:indigo"><i class="fa fa-shopping-cart"></i> Cart @Model.CartItems.Count</a>
}
else
{
    <a class="btn text-light me-2" asp-controller="Cart" asp-action="Index" style="background-color:indigo"><i class="fa fa-shopping-cart"></i> Cart </a>
}