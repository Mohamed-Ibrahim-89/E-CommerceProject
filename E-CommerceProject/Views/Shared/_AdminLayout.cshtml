<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - E-commerce</title>
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">

</head>
<body>
    <header>
        <nav class="navbar" data-bs-theme="light">
            <div class="container-fluid">
                <div>
                    <a class="navbar-brand text-dark" asp-controller="Home" asp-action="Index">E-Commerce</a>

                    @if (User.Identity!.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <div class="dropdown d-inline-block">
                            <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                Actions List
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="nav-link" asp-controller="Product" asp-action="List">Products List</a></li>
                                <li><a class="nav-link" asp-controller="Category" asp-action="List">Categories List</a></li>
                                <li><a class="nav-link" asp-controller="Discount" asp-action="List">Discounts List</a></li>
                                <li><a class="nav-link" asp-controller="User" asp-action="UsersList">Users List</a></li>
                                <li><a class="nav-link" asp-controller="User" asp-action="RolesList">Roles List</a></li>
                            </ul>
                        </div>
                    }
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <div class="user-info-container">
                        <partial name="_LoginPartial" />
                    </div>
                </div>

            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("NToastNotify")
</body>
</html>
