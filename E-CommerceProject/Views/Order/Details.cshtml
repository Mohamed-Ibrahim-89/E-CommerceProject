@model Order

@{
    ViewData["Title"] = "Order Details";
    Layout = "_CustomLayout";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h4>Order Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Status)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.OrderDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.OrderDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TotalPrice)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TotalPrice)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CustomerInfo!.AddressLine1)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CustomerInfo!.AddressLine1)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.OrderDetails)
                </dt>
                <dd class="col-sm-10">

                    @foreach (var item in Model.OrderDetails!)
                    {
                        <div class="row">
                            <div class="col-md-4">
                                Product: @item.Product!.Name
                            </div>
                            <div class="col-md-4">
                                Quantity: @item.Quantity
                            </div>
                            <div class="col-md-4">
                                Price: @item.Price
                            </div>
                        </div>
                    }

                </dd>
            </dl>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Home</a>
        </div>
    </div>
</div>