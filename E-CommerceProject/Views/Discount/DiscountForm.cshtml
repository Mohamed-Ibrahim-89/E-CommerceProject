@model Discount

@{
    ViewData["Title"] = "Discount";
    Layout = "_AdminLayout";
}

<h1>@(Model.DiscountId > 0 ? $"Edit {Model.Name} discount" : "Add new Discount")</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="@(Model.DiscountId > 0 ? "Edit" : "Create")">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DiscountId" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Percentage" class="control-label"></label>
                <input asp-for="Percentage" class="form-control" />
                <span asp-validation-for="Percentage" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                </label>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary mt-4">
                    <i class="bi bi-check"></i>
                    Save
                </button>
                <a class="btn btn-secondary mt-4" asp-controller="Discount" asp-action="List">
                    <i class="bi bi-x"></i>
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
