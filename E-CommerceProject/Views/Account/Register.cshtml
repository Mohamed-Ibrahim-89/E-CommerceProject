@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "_CustomLayout";
}

<h2>Create a new account</h2>
<hr />

<div class="row">
    <div class="col-md-4 mx-auto">
        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-warning"></div>

            <div class="form-group mb-3">
                <label asp-for="Username">
                    <input asp-for="Username" class="form-control" placeholder="Enter username" autocomplete="off" />
                </label>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email">
                    <input asp-for="Email" class="form-control" placeholder="Enter email" autocomplete="off" />
                </label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password">
                    <input asp-for="Password" class="form-control" placeholder="Enter a password" />
                </label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ConfirmPassword">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Enter confirm password" />
                </label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div>
                <input type="submit" value="Register" class="btn btn-primary mt-2" />
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}